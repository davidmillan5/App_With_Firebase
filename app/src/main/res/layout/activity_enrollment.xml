<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnrollmentActivity"
    android:orientation="vertical"
    android:background="@color/lightBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="64dp">

        <EditText
            android:id="@+id/etenrollmentCode"
            android:layout_height="48dp"
            android:layout_width="180dp"
            android:inputType="text"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="12dp"
            android:hint="Enrollment Code"
            android:textAlignment="center"
            android:background="@color/gray"
            />
        <Button
            android:id="@+id/btnSearch"
            android:layout_height="48dp"
            android:layout_width="180dp"
            android:onClick="Search"
            android:layout_weight="1"
            android:text="Search"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="12dp"
            android:backgroundTint="@color/blueButton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/etStudentId"
            android:layout_height="48dp"
            android:layout_width="180dp"
            android:inputType="text"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="12dp"
            android:hint="Enter Student Id"
            android:textAlignment="center"
            android:background="@color/gray"
            />

        <EditText
            android:id="@+id/etClassId"
            android:layout_height="48dp"
            android:layout_width="180dp"
            android:inputType="number"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="12dp"
            android:hint="Enter Class Id"
            android:textAlignment="center"
            android:background="@color/gray"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvStudentFullName"
            android:layout_height="48dp"
            android:layout_width="180dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="12dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/gray"
            />

        <TextView
            android:id="@+id/tvClassName"
            android:layout_height="48dp"
            android:layout_width="180dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="12dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@color/gray"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:layout_marginVertical="12dp">


        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="90dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">


            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add"
                android:onClick="Add"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/blueButton"/>

            <Button
                android:id="@+id/btnCancel"
                android:onClick="Clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/blueButton"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">


            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Anulate"
                android:onClick="Anulate"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/blueButton"/>

            <Button
                android:id="@+id/btnBack"
                android:onClick="Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Back"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="12dp"
                android:backgroundTint="@color/blueButton"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_marginTop="2dp">


        <Button
            android:id="@+id/btnconsult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Consult"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="12dp"
            android:backgroundTint="@color/blueButton"
            android:onClick="General_Consult"/>

        <Button
            android:id="@+id/btnFind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Find"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="12dp"
            android:backgroundTint="@color/blueButton"
            android:onClick="Find"/>


    </LinearLayout>


</LinearLayout>